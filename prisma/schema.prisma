generator client {
  provider = "prisma-client-js"
  // output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define the ProgressItem table
model ProgressItem {
  id           String @id @default(cuid()) // Unique ID, cuid() is great for web apps
  name         String
  startingPage Int
  currentPage  Int
  targetPage   Int
  position     Int @default(0) // Position for ordering

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
